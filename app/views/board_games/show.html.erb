<div class="container">
  <img src="https://images.unsplash.com/photo-1593642532454-e138e28a63f4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3300&q=80" alt=""  width="1100" height="500">
  <h1><%= @board_game.name %></h1>
</div>


<div class="container">
  <ul>
    <li><%= @board_game.description %></li>
    <li><%= @board_game.comment %></li>
    <li><%= @board_game.price %></li>
  </ul>
</div>

<div class="container">
  <div class= 'row'>
    <div class='col-4'>
      <%= simple_form_for [@board_game, @renting] do |f| %>
        <%= f.input :starting_date, as: :date, html5: true %>
        <%= f.input :ending_date, as: :date, html5: true %>
        <%= f.submit class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>




